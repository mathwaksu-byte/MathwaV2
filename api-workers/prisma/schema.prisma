// Prisma Schema for MATHWA - Kyrgyz State University Partnership
// Database: Supabase PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// USER MODEL
// ============================================
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String?
  role      UserRole @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  applications Application[]

  @@map("users")
}

enum UserRole {
  ADMIN
  EDITOR
  STUDENT
}

// ============================================
// UNIVERSITY MODEL
// ============================================
model University {
  id          String   @id @default(uuid())
  name        String
  country     String
  city        String
  description String?  @db.Text
  ranking     Int?
  tuitionFee  Decimal? @db.Decimal(10, 2)
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  programs     Program[]
  gallery      Gallery[]
  applications Application[]

  @@map("universities")
}

// ============================================
// PROGRAM MODEL
// ============================================
model Program {
  id           String   @id @default(uuid())
  universityId String
  name         String
  duration     String // e.g., "4 years", "2 semesters"
  fee          Decimal? @db.Decimal(10, 2)
  eligibility  String?  @db.Text
  description  String?  @db.Text
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  university   University    @relation(fields: [universityId], references: [id], onDelete: Cascade)
  applications Application[]

  @@index([universityId])
  @@map("programs")
}

// ============================================
// GALLERY MODEL
// ============================================
model Gallery {
  id           String    @id @default(uuid())
  universityId String?
  imageUrl     String
  title        String?
  createdAt    DateTime  @default(now())

  // Relations
  university University? @relation(fields: [universityId], references: [id], onDelete: SetNull)

  @@index([universityId])
  @@map("gallery")
}

// ============================================
// PRICE SETTINGS MODEL
// ============================================
model PriceSettings {
  id              String   @id @default(uuid())
  consultationFee Decimal  @db.Decimal(10, 2)
  serviceCharge   Decimal  @db.Decimal(10, 2)
  applicationFee  Decimal  @db.Decimal(10, 2)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("price_settings")
}

// ============================================
// CONTENT BLOCKS MODEL
// ============================================
model ContentBlock {
  id        String   @id @default(uuid())
  key       String   @unique // e.g., "homepage_hero", "about_section"
  title     String
  body      String?  @db.Text
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("content_blocks")
}

// ============================================
// APPLICATIONS MODEL
// ============================================
model Application {
  id           String            @id @default(uuid())
  userId       String
  programId    String
  universityId String
  status       ApplicationStatus @default(PENDING)
  documents    Json? // Array of document URLs
  notes        String?           @db.Text
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  // Relations
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  program    Program    @relation(fields: [programId], references: [id], onDelete: Cascade)
  university University @relation(fields: [universityId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([programId])
  @@index([universityId])
  @@index([status])
  @@map("applications")
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

// ============================================
// MESSAGES / CONTACT FORM MODEL
// ============================================
model Message {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String?
  message   String   @db.Text
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([isRead])
  @@map("messages")
}
