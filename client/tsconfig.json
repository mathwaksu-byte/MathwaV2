{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "ES2022"],
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["vite/client", "@remix-run/node", "@remix-run/react"],
    "paths": {
      "~/*": ["./app/*"],
      "server-build": ["./build/index.js"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "remix.env.d.ts"
  ]
}
